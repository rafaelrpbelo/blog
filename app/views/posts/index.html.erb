<%= notice %>

<h2><%= t('title.post.index') %></h2>

<table>
	<thread>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thread>

	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.body %></td>
				<td><%= link_to t('link.action.show'), post %></td>
				<td><%= link_to t('link.action.edit'), edit_post_path(post) %></td>
				<td><%= link_to t('link.action.destroy'), post, method: :delete, 
					data: { confirm: t('data.confirm.destroy', resource: 'post') } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('link.post.new'), new_post_path %>