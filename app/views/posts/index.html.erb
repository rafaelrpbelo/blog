<div class='row'>
  <%= notice %>

  <h2><%= t('title.post.index') %></h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Tag</th>
        <th>Body</th>
        <th colspan='3' class='text-center'>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.tags.any? ? post.tags.join(' ') : "<span class='text-mutted'>Post sem tag</span>".html_safe %></td>
          <td><%= post.body %></td>
          <td><%= link_to t('link.action.show'), post %></td>
          <td><%= link_to t('link.action.edit'), edit_post_path(post) %></td>
          <td><%= link_to t('link.action.destroy'), post, method: :delete,
            data: { confirm: t('data.confirm.destroy', resource: 'post') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('link.action.new', resource: 'post'), new_post_path, class: 'button' %>&nbsp;
  <%= link_to t('link.action.back').capitalize, root_path, class: 'button-negative' %>
</div>
