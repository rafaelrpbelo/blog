<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
		<h3> Erros foram encontrados: </h3>
		
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>		
	</div>

	<div>
		<%= f.label :body %>
		<%= f.text_field :body %>
	</div>

	<div>
		<%= f.submit %>
	</div>
<% end %>