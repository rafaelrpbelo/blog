<%= notice %>

<h2><%= t('title.tag.index') %></h2>

<table>
  <thread>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thread>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to t('link.action.edit'), edit_tag_path(tag) %></td>
        <td><%= link_to t('link.action.destroy'), tag, method: :delete,
          data: { confirm: t('data.confirm.destroy', resource: 'tag') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('link.action.new', resource: 'tag'), new_tag_path %>&nbsp;
<%= link_to t('link.action.back').capitalize, root_path %>
